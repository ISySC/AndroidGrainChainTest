<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="@dimen/radius_10dp"
                                    app:cardBackgroundColor="@color/colorPrimaryDark">

    <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ic_accion"
                android:layout_width="@dimen/size_32dp"
                android:layout_height="@dimen/size_32dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/mar_10dp"
                android:src="@drawable/ic_done"/>

        <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_accion"
                android:text="{Message}"
                android:layout_marginRight="@dimen/mar_20dp"
                android:layout_marginBottom="@dimen/mar_20dp"
                android:layout_marginTop="@dimen/mar_20dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_20sp"
                android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>